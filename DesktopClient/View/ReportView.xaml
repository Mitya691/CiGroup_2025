<UserControl x:Class="DesktopClient.View.ReportView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DesktopClient.View"
             xmlns:vm="clr-namespace:DesktopClient.VM"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             d:DataContext="{d:DesignInstance Type=vm:ReportDialogVM, IsDesignTimeCreatable=False}">

    <UserControl.Resources>
        <Style x:Key="PlaceholderTextBoxStyle" TargetType="{x:Type TextBox}" BasedOn="{StaticResource {x:Type TextBox}}">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type TextBox}">
                        <Border x:Name="border"
     Padding="{TemplateBinding Padding}"
     Background="{TemplateBinding Background}"
     BorderBrush="{TemplateBinding BorderBrush}"
     BorderThickness="{TemplateBinding BorderThickness}"
     CornerRadius="12"
     SnapsToDevicePixels="True">
                            <Grid>
                                <ScrollViewer x:Name="PART_ContentHost" />
                                <TextBlock x:Name="textBlock"
                Margin="2,0,0,0"
                Foreground="{TemplateBinding BorderBrush}"
                IsHitTestVisible="False"
                Text="{Binding Tag, RelativeSource={RelativeSource TemplatedParent}}"
                Visibility="Collapsed" />
                            </Grid>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="Text" Value="">
                                <Setter TargetName="textBlock" Property="Visibility" Value="Visible" />
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="border" Property="Opacity" Value="0.56" />
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="BorderBrush" Value="#FF7EB4EA" />
                            </Trigger>
                            <Trigger Property="IsKeyboardFocused" Value="True">
                                <Setter TargetName="border" Property="BorderBrush" Value="#FF569DE5" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Стиль для текстовых полей -->
        <Style x:Key="FormTextBox" TargetType="TextBox" BasedOn="{StaticResource PlaceholderTextBoxStyle}">
            <Setter Property="Margin" Value="0 0 0 15"/>
            <Setter Property="BorderBrush" Value="Gray"/>
            <Setter Property="BorderThickness" Value="0.5"/>
            <Setter Property="Padding" Value="8,4,0,4"/>
        </Style>

        <Style x:Key="HelpButton" TargetType="Button" BasedOn="{StaticResource MaterialDesignFlatButton}">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" Background="#EEEEEE"
             BorderThickness="1" CornerRadius="12" SnapsToDevicePixels="True">
                            <!-- This is where your button’s Content actually appears: -->
                            <ContentPresenter Margin="{TemplateBinding Padding}"
                           HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                           VerticalAlignment="{TemplateBinding VerticalContentAlignment}"
                           RecognizesAccessKey="True"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Opacity" Value="0.9"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Opacity" Value="0.8"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="border" Property="Opacity" Value="0.45"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>
    <Grid Background="White" Cursor="" >
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Header -->
            <RowDefinition Height="Auto"/>
            <!-- Прокладка -->
            <RowDefinition Height="Auto"/>
            <!-- Фильтр -->
            <RowDefinition Height="*"/>
            <!-- Плитки -->
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header: навигация -->
        <Grid Grid.Row="0" Background="White" Height="48" Cursor="" Margin="0 20 0 0 ">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <!-- Бейдж -->
                <ColumnDefinition Width="*"/>
                <!-- Левый наполнитель -->
                <ColumnDefinition Width="Auto"/>
                <!-- Кнопки (центр) -->
                <ColumnDefinition Width="*"/>
                <!-- Правый наполнитель -->
                <ColumnDefinition Width="Auto"/>
                <!-- Лого -->
            </Grid.ColumnDefinitions>

            <!-- ЛЕВО: Бейдж пользователя (иконка + ФИО) -->
            <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center" Margin="20 0 0 0" >
                <Image Source="/Docs/Images/User.png" Margin="10" />
                <Border Padding="8,6" CornerRadius="8" Background="#10000000" VerticalAlignment="Center">
                    <StackPanel>
                        <TextBlock FontWeight="SemiBold"
                   Text="{Binding CurrentUser.FullName, Source={StaticResource CurrentUser}, FallbackValue=Гость}"/>
                        <TextBlock FontSize="12" Opacity="0.8"
                   Text="{Binding CurrentUser.Post, Source={StaticResource CurrentUser}}"/>
                    </StackPanel>
                </Border>
                <!-- Скрыть весь бейдж, если юзера нет -->
                <StackPanel.Style>
                    <Style TargetType="StackPanel">
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding CurrentUser, Source={StaticResource CurrentUser}}" Value="{x:Null}">
                                <Setter Property="Visibility" Value="Collapsed"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </StackPanel.Style>
            </StackPanel>

            <!-- ЦЕНТР: Кнопки навигации (строго по центру окна) -->
            <StackPanel Grid.Column="2" Orientation="Horizontal"
              VerticalAlignment="Center" HorizontalAlignment="Center">
                <RadioButton GroupName="Nav" Style="{StaticResource NavTab}"
                 Content="Главный экран" 
                 Command="{Binding NavigateToHomeCommand}" />
                <RadioButton GroupName="Nav" Style="{StaticResource NavTab}"
                 Content="Отчёты" Margin="40,0,0,0"
                 Command="{Binding NavigateReportsCommand}" IsChecked="True"/>
                <Button Content="Выйти"  Padding="12,6" Margin="40,0,0,0"
        Command="{Binding LogoutCommand}" Style="{StaticResource HelpButton}" 
        Background="#EEEEEE" Foreground="Black"/>
                </StackPanel>

            <!-- ПРАВО: Логотип компании в правом верхнем углу -->
            <Image Grid.Column="3" Source="/Docs/Images/MacPromLogo.png"
                   HorizontalAlignment="Right" VerticalAlignment="Top"
                   Margin="0,-12,20,0" Height="79" Grid.ColumnSpan="3" Width="142"/>
        </Grid>

        <Border Grid.Row="1"
                Height="1"
                VerticalAlignment="Bottom"
                Background="#CECECE"            
                SnapsToDevicePixels="True" Margin="15 10 15 0"/>

        <Grid Grid.Row="3">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <StackPanel Grid.Column="0" Margin="40 20 0 0">
                <TextBlock Text="Сменные отчёты" Margin="15" FontSize="20"/>
                <TextBlock Text="Стандартные интервалы" Margin="15 0 0 15 "/>
                <StackPanel Orientation="Horizontal">
                    <Button Content="Смена 1" Command="{Binding SetFirstShift}" Margin="15 0 15 0" Style="{StaticResource HelpButton}" 
                            Width="140" Foreground="Black"/>
                    <Button Content="Смена 2" Command="{Binding SetSecondShift}" Margin="15 0 15 0" Style="{StaticResource HelpButton}"
                            Width="140" Foreground="Black"/>
                </StackPanel>
                <TextBlock Text="Выбор оператора" Margin="15"/>
                <StackPanel Orientation="Horizontal">
                    <ComboBox ItemsSource="{Binding Operators}" SelectedItem="{Binding ShiftOperator, Mode=TwoWay}"
                              Width="140" Margin="15 0 0 15 "/>
                </StackPanel>
                <TextBlock Text="Начало периода" Margin="15"/>
                <StackPanel Orientation="Horizontal">
                    <DatePicker SelectedDate="{Binding DateStart, Mode=TwoWay}"  SelectedDateFormat="Short"
                                Width="150" Height="30" Margin="15 0 15 0"/>
                    <TextBox Text="{Binding StartTime}" Style="{StaticResource FormTextBox}" Width="100" Margin="10 0"/>
                </StackPanel>
                <TextBlock Text="Конец периода" Margin="15"/>
                <StackPanel Orientation="Horizontal">
                    <DatePicker SelectedDate="{Binding DateStop, Mode=TwoWay}"  SelectedDateFormat="Short"
                                Width="150" Height="30" Margin="15 0 15 0"/>
                    <TextBox Text="{Binding StopTime}" Style="{StaticResource FormTextBox}" Width="100" Margin="10 0"/>
                </StackPanel>

                <Button Content="Сгенерировать отчёт" Command="{Binding GenerateReport}" Margin="0 15 0 0" Style="{StaticResource BaseButton}"
                        Foreground="White" FontWeight="Normal" Width="500" HorizontalAlignment="Left"/>
            </StackPanel>

            <StackPanel Grid.Column="1" Margin="40 20 0 0">
                <TextBlock Text="Суточные отчеты" Margin="15" FontSize="20"/>
                <TextBlock Text="Стандратные интервалы" Margin="15 0 0 15 "/>
                <StackPanel Orientation="Horizontal">
                    <Button Content="Предыдущие 2 смены" Command="{Binding SetStandardPeriod}" 
                            Margin="15 0 15 0" Style="{StaticResource HelpButton}" 
                Width="280" Foreground="Black"/>
                </StackPanel>
                <TextBlock Text="Выбор оператора" Margin="15"/>
                <StackPanel Orientation="Horizontal">
                    <ComboBox ItemsSource="{Binding Operators}" SelectedItem="{Binding FirstOperator, Mode=TwoWay}"
                                Width="140" Margin="15 0 0 15 "/>
                    <ComboBox ItemsSource="{Binding Operators}" SelectedItem="{Binding SecondOperator, Mode=TwoWay}"
                                Width="140" Margin="15 0 0 15 "/>
                </StackPanel>
                <TextBlock Text="Начало периода" Margin="15"/>
                <StackPanel Orientation="Horizontal">
                    <DatePicker SelectedDate="{Binding DayDateStart, Mode=TwoWay}"  SelectedDateFormat="Short"
                    Width="150" Height="30" Margin="15 0 15 0"/>
                    <TextBox Text="{Binding DayStartTime}" Style="{StaticResource FormTextBox}" Width="100" Margin="10 0"/>
                </StackPanel>
                <TextBlock Text="Конец периода" Margin="15"/>
                <StackPanel Orientation="Horizontal">
                    <DatePicker SelectedDate="{Binding DayDateStop, Mode=TwoWay}"  SelectedDateFormat="Short"
                    Width="150" Height="30" Margin="15 0 15 0"/>
                    <TextBox Text="{Binding DayStopTime}" Style="{StaticResource FormTextBox}" Width="100" Margin="10 0"/>
                </StackPanel>

                <Button Content="Сгенерировать отчёт" Command="{Binding GenerateDayReport}" Margin="0 15 0 0" Style="{StaticResource BaseButton}"
            Foreground="White" FontWeight="Normal" Width="500" HorizontalAlignment="Left"/>
            </StackPanel>
        </Grid>
    </Grid>
</UserControl>
